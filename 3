        const teacherDatabase = {
            bangla: { name: "‡¶Ü‡¶¨‡ßç‡¶¶‡ßÅ‡¶≤ ‡¶ï‡¶∞‡¶ø‡¶Æ ‡¶∏‡ßç‡¶Ø‡¶æ‡¶∞", subject: "‡¶¨‡¶æ‡¶Ç‡¶≤‡¶æ (Bangla)" },
            english: { name: "‡¶∏‡¶æ‡¶≤‡¶Æ‡¶æ ‡¶¨‡ßá‡¶ó‡¶Æ ‡¶Æ‡ßç‡¶Ø‡¶æ‡¶°‡¶æ‡¶Æ", subject: "‡¶á‡¶Ç‡¶∞‡ßá‡¶ú‡¶ø (English)" },
            math: { name: "‡¶∞‡¶´‡¶ø‡¶ï‡ßÅ‡¶≤ ‡¶á‡¶∏‡¶≤‡¶æ‡¶Æ ‡¶∏‡ßç‡¶Ø‡¶æ‡¶∞", subject: "‡¶ó‡¶£‡¶ø‡¶§ (Mathematics)" },
            science: { name: "‡¶®‡¶æ‡¶ú‡¶Æ‡¶æ ‡¶Ü‡¶ï‡ßç‡¶§‡¶æ‡¶∞ ‡¶Æ‡ßç‡¶Ø‡¶æ‡¶°‡¶æ‡¶Æ", subject: "‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶® (Science)" },
            social: { name: "‡¶ï‡¶æ‡¶Æ‡¶∞‡ßÅ‡¶≤ ‡¶π‡¶æ‡¶∏‡¶æ‡¶® ‡¶∏‡ßç‡¶Ø‡¶æ‡¶∞", subject: "‡¶∏‡¶æ‡¶Æ‡¶æ‡¶ú‡¶ø‡¶ï ‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶®" }
        };

        const sportsDatabase = {
            football: [
                { name: "‡¶Æ‡ßã‡¶É ‡¶Æ‡ßã‡¶¨‡¶æ‡¶∞‡¶ï ‡¶π‡ßã‡¶∏‡ßá‡¶® ‡¶Æ‡ßÅ‡¶®‡ßç‡¶®‡¶æ", class: "Inter 2nd", position: "Forward" }
            ],
            cricket: [],
            badminton: [],
            volleyball: []
        };

        let currentStudent = null;
        let notifications = [];
        let fingerprintData = {right1: false, right2: false, left1: false, left2: false};

        // Navigation
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            document.querySelectorAll('button[data-class]').forEach(btn => {
                btn.addEventListener('click', function() {
                    loadStudentClass(this.getAttribute('data-class'));
                });
            });

            document.querySelectorAll('button[data-teacher]').forEach(btn => {
                btn.addEventListener('click', function() {
                    selectTeacher(this.getAttribute('data-teacher'));
                });
            });

            document.querySelectorAll('button[data-sport]').forEach(btn => {
                btn.addEventListener('click', function() {
                    loadSport(this.getAttribute('data-sport'));
                });
            });

            updateTotalStudents();
            simulateAttendance();
        });

        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
            const selectedPage = document.getElementById(pageId);
            if (selectedPage) selectedPage.classList.add('active');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function loadStudentClass(className) {
            const students = studentDatabase[className] || [];
            const container = document.getElementById('studentListContainer');
            
            let html = `<div class="class-container"><h3>Class ${className.toUpperCase()} - Students List</h3>`;
            html += '<div class="student-list">';
            
            students.forEach(student => {
                const attendancePercent = (student.presentDays / student.totalDays * 100).toFixed(1);
                const attendanceClass = attendancePercent >= 90 ? 'attendance-good' : 
                                       attendancePercent >= 70 ? 'attendance-warning' : 'attendance-danger';
                
                html += `
                    <div class="student-card" onclick='showStudentDetails(${JSON.stringify(student)})'>
                        <h4>${student.name}</h4>
                        <p><strong>Roll:</strong> ${student.roll}</p>
                        <p><strong>Section:</strong> ${student.section}</p>
                        <p><strong>Attendance:</strong> ${student.presentDays}/${student.totalDays}</p>
                        <span class="attendance-badge ${attendanceClass}">${attendancePercent}%</span>
                    </div>
                `;
            });
            
            html += '</div></div>';
            container.innerHTML = html;
        }

        function showStudentDetails(student) {
            const attendancePercent = (student.presentDays / student.totalDays * 100).toFixed(1);
            
            let html = `
                <h2>Student Details - ${student.name}</h2>
                <div class="detail-section">
                    <h3>üìã Basic Information</h3>
                    <div class="detail-row">
                        <span class="detail-label">Name:</span>
                        <span class="detail-value">${student.name}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Roll:</span>
                        <span class="detail-value">${student.roll}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Section:</span>
                        <span class="detail-value">${student.section}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Attendance:</span>
                        <span class="detail-value">${attendancePercent}%</span>
                    </div>
                </div>
            `;
            
            document.getElementById('studentDetails').innerHTML = html;
            document.getElementById('studentModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('studentModal').style.display = 'none';
        }

        function searchStudent() {
            // Search functionality
        }

        function selectTeacher(teacherCode) {
            const teacher = teacherDatabase[teacherCode];
            if (!teacher) return;
            
            document.getElementById('teacherName').textContent = teacher.name;
            document.getElementById('teacherSubject').textContent = '‡¶¨‡¶ø‡¶∑‡¶Ø‡¶º: ' + teacher.subject;
            document.getElementById('teacherDashboard').style.display = 'block';
        }

        function loadSport(sportName) {
            const players = sportsDatabase[sportName] || [];
            const container = document.getElementById('sportsListContainer');
            
            let html = `<div class="class-container"><h3>${sportName.toUpperCase()} Players</h3>`;
            html += '<div class="student-list">';
            
            players.forEach(player => {
                html += `
                    <div class="student-card">
                        <h4>${player.name}</h4>
                        <p><strong>Class:</strong> ${player.class}</p>
                        <p><strong>Position:</strong> ${player.position}</p>
                    </div>
                `;
            });
            
            html += '</div></div>';
            container.innerHTML = html;
        }

        // Guardian Functions
        function guardianLogin() {
            const roll = parseInt(document.getElementById('guardianRoll').value);
            const phone = document.getElementById('guardianPhone').value;
            
            let found = null;
            for (let className in studentDatabase) {
                const student = studentDatabase[className].find(s => s.roll === roll && s.guardianPhone === phone);
                if (student) {
                    found = student;
                    break;
                }
            }
            
            if (found) {
                currentStudent = found;
                document.getElementById('guardianLogin').style.display = 'none';
                document.getElementById('guardianDashboard').style.display = 'block';
                document.getElementById('guardianStudentName').textContent = `Student: ${found.name}`;
                document.getElementById('guardianStudentInfo').textContent = `Roll: ${found.roll} | Section: ${found.section}`;
                
                const attendancePercent = (found.presentDays / found.totalDays * 100).toFixed(1);
                document.getElementById('guardianAttendance').textContent = attendancePercent + '%';
                document.getElementById('guardianAverage').textContent = found.exams[0].marks;
                
                loadNotifications();
            } else {
                alert('‚ùå Invalid credentials! Please check roll number and phone.');
            }
        }

        function guardianLogout() {
            currentStudent = null;
            document.getElementById('guardianLogin').style.display = 'block';
            document.getElementById('guardianDashboard').style.display = 'none';
            document.getElementById('guardianRoll').value = '';
            document.getElementById('guardianPhone').value = '';
        }

        function loadNotifications() {
            const container = document.getElementById('notificationList');
            
            if (notifications.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999;">No notifications yet</p>';
                return;
            }
            
            let html = '';
            notifications.reverse().forEach(notif => {
                html += `
                    <div class="notification-box ${notif.type === 'alert' ? 'alert' : ''}">
                        <strong>${notif.title}</strong>
                        <p>${notif.message}</p>
                        <div class="notification-time">${notif.time}</div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        function simulateAttendance() {
            setInterval(() => {
                if (currentStudent) {
                    const now = new Date();
                    const time = now.toLocaleTimeString('bn-BD');
                    
                    notifications.push({
                        title: '‚úÖ Attendance Notification',
                        message: `${currentStudent.name} entered school at ${time}`,
                        time: time,
                        type: 'success'
                    });
                    
                    loadNotifications();
                }
            }, 30000); // Every 30 seconds for demo
        }

        // Principal Functions
        function principalLogin() {
            const username = document.getElementById('principalUsername').value;
            const password = document.getElementById('principalPassword').value;
            
            if (username === 'admin' && password === 'admin123') {
                document.getElementById('principalLogin').style.display = 'none';
                document.getElementById('principalDashboard').style.display = 'block';
                document.getElementById('addStudentBtn').style.display = 'block';
                updateTotalStudents();
            } else {
                alert('‚ùå Invalid credentials!');
            }
        }

        function principalLogout() {
            document.getElementById('principalLogin').style.display = 'block';
            document.getElementById('principalDashboard').style.display = 'none';
            document.getElementById('addStudentBtn').style.display = 'none';
            document.getElementById('principalUsername').value = '';
            document.getElementById('principalPassword').value = '';
        }

        function updateTotalStudents() {
            let total = 0;
            for (let className in studentDatabase) {
                total += studentDatabase[className].length;
            }
            document.getElementById('totalStudents').textContent = total;
        }

        function showAddStudentForm() {
            document.getElementById('addStudentModal').style.display = 'block';
            fingerprintData = {right1: false, right2: false, left1: false, left2: false};
            document.getElementById('fingerprintStatus').style.display = 'none';
            resetFingerprintUI();
        }

        function closeAddStudentModal() {
            document.getElementById('addStudentModal').style.display = 'none';
        }

        function scanFingerprint(finger) {
            const scanner = document.getElementById(finger === 'right1' ? 'rightFinger1' : 
                                                   finger === 'right2' ? 'rightFinger2' :
                                                   finger === 'left1' ? 'leftFinger1' : 'leftFinger2');
            const status = document.getElementById(finger + 'Status');
            
            scanner.classList.add('scanning');
            status.textContent = '‚è≥';
            
            setTimeout(() => {
                scanner.classList.remove('scanning');
                status.textContent = '‚úÖ';
                scanner.style.background = 'linear-gradient(135deg, #2ecc71 0%, #27ae60 100%)';
                fingerprintData[finger] = true;
                
                if (fingerprintData.right1 && fingerprintData.right2 && 
                    fingerprintData.left1 && fingerprintData.left2) {
                    document.getElementById('fingerprintStatus').style.display = 'block';
                }
            }, 2000);
        }

        function resetFingerprintUI() {
            ['rightFinger1', 'rightFinger2', 'leftFinger1', 'leftFinger2'].forEach(id => {
                document.getElementById(id).style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
                document.getElementById(id + 'Status').textContent = 'üëÜ';
            });
        }

        function saveNewStudent() {
            const name = document.getElementById('newStudentName').value;
            const className = document.getElementById('newStudentClass').value;
            const section = document.getElementById('newStudentSection').value;
            
            if (!name || !className || !section) {
                alert('‚ùå Please fill all fields!');
                return;
            }
            
            if (!fingerprintData.right1 || !fingerprintData.right2 || 
                !fingerprintData.left1 || !fingerprintData.left2) {
                alert('‚ùå Please complete fingerprint registration!');
                return;
            }
            
            const newRoll = studentDatabase[className].length + 1;
            const newStudent = {
                roll: newRoll,
                name: name,
                section: section,
                totalDays: 100,
                presentDays: 0,
                exams: [],
                guardianPhone: "01700000000"
            };
            
            studentDatabase[className].push(newStudent);
            
            alert('‚úÖ Student added successfully!');
            closeAddStudentModal();
            updateTotalStudents();
            
            document.getElementById('newStudentName').value = '';
            document.getElementById('newStudentClass').value = '';
            document.getElementById('newStudentSection').value = '';
        }

        function viewAllStudents() {
            let html = '<div class="info-card"><h3>üìä All Students</h3>';
            
            for (let className in studentDatabase) {
                const students = studentDatabase[className];
                if (students.length > 0) {
                    html += `<h4 style="margin-top: 20px;">${className.toUpperCase()}: ${students.length} students</h4>`;
                }
            }
            
            html += '</div>';
            document.getElementById('principalContent').innerHTML = html;
        }

        function viewAttendance() {
            document.getElementById('principalContent').innerHTML = '<div class="info-card"><h3>üìä Attendance Report</h3><p>Attendance tracking system active</p></div>';
        }

        function viewResults() {
            document.getElementById('principalContent').innerHTML = '<div class="info-card"><h3>üìù Results Overview</h3><p>Results management system</p></div>';
        }

        function submitAdmission() {
            document.getElementById('admissionSuccess').style.display = 'block';
            setTimeout(() => {
                document.getElementById('admissionSuccess').style.display = 'none';
            }, 3000);
        }

        window.onclick = function(event) {
            if (event.target.className === 'modal') {
                event.target.style.display = 'none';
            }
        };
    </script>
</body>
</html>
